{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(Windows) Launch",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/src/headless/headless.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Soundwoofer Dummy",
            "cwd": "${workspaceFolder}/thirdparty/soundwoofer/dummy_backend/",
            "program": "${workspaceFolder}/thirdparty/soundwoofer/dummy_backend/index.js",
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "name": "(gdb) Headless",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/src/headless/headless",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}