{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "msvc headless",
            "type": "shell",
            "command": "cl /DEBUG:FULL /ZI /I ../../ /I../../thirdparty /I../faust/generated headless.cpp",
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "gcc headless",
            "type": "shell",
            "command": "python ./scripts/compile_faust.py && g++ -g -pthread -I./ -I./thirdparty/ -I./src/faust/generated/ ./src/headless/headless.cpp -o ./src/headless/headless",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}