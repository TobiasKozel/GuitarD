{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "msvc debug",
            "type": "shell",
            "command": "cl",
            "args": [
                "/DEBUG:FULL",
                "/ZI",
                "/I./",
                "/I./thirdparty",
                "/I./src/faust/generated",
                "${file}",
                "/link",
                "/O",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$msCompile"]
        },
        {
            "label": "gcc debug",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "-O0",
                "-I./",
                "-I./thirdparty/",
                "-I./src/faust/generated/",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}",
                // "-pthread"
                "-lws2_32"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        }
    ]
}